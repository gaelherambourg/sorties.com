{% extends 'base.html.twig' %}

{% block title %}Inscription sur le site{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription d'un nouveau profil</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.campusNoCampus) }}
        {{ form_row(registrationForm.mail) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe :'
        }) }}

        {{ form_row(registrationForm.photo) }}


        <button type="submit" class="btn">S'enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
