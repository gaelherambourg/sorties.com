{% extends 'base.html.twig' %}

{% block title %}Inscription sur le site{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription d'un nouveau profil</h1>

    {% form_theme registrationForm 'bootstrap_4_layout.html.twig'%}

    <div class="row">


        <div class="col-md-2"></div>

        <div class="col-md-4 registerForm">
            {{ form_start(registrationForm) }}

            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.mail) }}
            {{ form_row(registrationForm.plainPassword.pw) }}

        </div>

        <div class="col-md-4 registerForm">
            {{ form_row(registrationForm.campusNoCampus) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.telephone) }}

            {{ form_row(registrationForm.plainPassword.conf) }}
        </div>

        <div class="col-md-2"></div>

    </div>

        <div class="choixPic">

            {{ form_label(registrationForm.photo) }}
            {{ form_widget(registrationForm.photo) }}
        </div>


        <div class="registerBtn">
            <a href="{{ path('app_login') }}">
                <button class="btn" type="button"><i class="fa fa-times"></i> Retour</button>
            </a>
            <button type="submit" class="btn"><i class="fa fa-check"></i> S'enregistrer</button>
        </div>
    {{ form_end(registrationForm) }}


    </div>
{% endblock %}
