{% extends 'base.html.twig' %}
{% block title %}Profil de {{ participant.pseudo }}{% endblock %}


{% block body %}

<h1>{{ participant.pseudo }}</h1>

    {% if participant.nomPhoto %}
        <div class="picProfil">
            <img src="../img/small/{{ participant.nomPhoto }}" alt="Photo de profil">
        </div>
    {% endif %}

    <div class="coordonnees"> {{ participant.prenom }} {{ participant.nom }}</div>

    {% if participant.telephone%}
        <div class="coordonnees">Téléphone : {{ participant.telephone }}</div>
    {% endif %}

    <div class="coordonnees">Email : {{ participant.mail}} </div>

    <div class="coordonnees">Campus : {{ participant.campusNoCampus.nom }}</div>

    <div class="coordonnees">
        <a href="{{ path('AccueilSorties') }}">
            <button class="btn">Retour</button>
        </a>
    </div>











{% endblock %}



